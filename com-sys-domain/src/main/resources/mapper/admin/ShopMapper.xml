<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sys.domain.admin.ShopMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sys.model.admin.Shop">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="address" property="address"/>
        <result column="phone" property="phone"/>
        <result column="tel" property="tel"/>
        <result column="code" property="code"/>
        <result column="status" property="status"/>
        <result column="header" property="header"/>

    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="colums_condition">
        id,
    name, address, phone, tel,code,status,header
    </sql>

    <sql id="condition">
        <if test="null!=params">
            <if test="null!=params.queryCondition and ''!=params.queryCondition">
                And ${params.queryCondition}
            </if>
            <if test="params.id != null and params.id != ''">
                and id = #{params.id}
            </if>
            <if test="params.name != null and params.name != ''">
                and name like '${params.name}%'
            </if>
            <if test="params.address != null and params.address != ''">
                and address like '${params.address}%'
            </if>
            <if test="params.phone != null and params.phone != ''">
                and phone like '${params.phone}%'
            </if>
            <if test="params.tel != null and params.tel != ''">
                and tel like '${params.tel}%'
            </if>
            <if test="params.code != null and params.code != ''">
                and code = #{params.code}
            </if>
            <if test="params.header != null and params.header != ''">
                and header = #{params.header}
            </if>
            <if test="params.status != null and params.status != ''">
                and status = #{params.status}
            </if>
        </if>
    </sql>

    <sql id="uniqe_condition">
        1=1
        <if test="null!=id and ''!=id">
            AND id=#{id}
        </if>
    </sql>

    <select id="findByPrimaryKey" resultMap="BaseResultMap">
        SELECT
        <include refid="colums_condition"/>
        FROM
        t_shop
        WHERE id = #{id};
    </select>

    <select id="findByUnique" resultMap="BaseResultMap">
        SELECT
        <include refid="colums_condition"/>
        FROM t_shop
        WHERE
        <include refid="uniqe_condition"/>
        limit 1
    </select>

    <select id="findByParam" resultMap="BaseResultMap" parameterType="map">
        SELECT
        <include refid="colums_condition"/>
        FROM t_shop
        WHERE 1=1
        <include refid="condition"/>
        LIMIT #{page.startRowNum} ,#{page.pageSize}
    </select>

    <select id="selectCount" resultType="java.lang.Integer">
        SELECT COUNT(1) as s FROM t_shop WHERE 1=1
        <include refid="condition"/>
    </select>

    <select id="selectByPage" resultMap="BaseResultMap" parameterType="map">
        SELECT
        <include refid="colums_condition"/>
        FROM t_shop WHERE 1=1
        <include refid="condition"/>
        <if test="orderby != null and ''!=orderby">
            ORDER BY ${orderby}
        </if>
        LIMIT #{page.startRowNum} ,#{page.pageSize}
    </select>

    <select id="selectByParams" resultMap="BaseResultMap" parameterType="map">
        SELECT
        <include refid="colums_condition"/>
        FROM t_shop t
        where 1=1
        <include refid="condition"/>
    </select>

    <delete id="deleteByPrimaryKey">
		DELETE FROM t_shop
		WHERE id = #{id}
	</delete>

    <delete id="deleteByUnique">
        DELETE FROM t_shop
        WHERE
        <include refid="uniqe_condition"/>
    </delete>

    <delete id="deleteByParams" parameterType="map">
        <if test="ids != null">
            DELETE
            FROM t_shop t where t.id in
            <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </delete>

    <insert id="insert" parameterType="com.sys.model.admin.Shop">
        INSERT INTO t_shop
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="address != null">
                address,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="tel != null">
                tel,
            </if>
            <if test="code != null">
                code,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="header != null">
                header,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="address != null">
                #{address},
            </if>
            <if test="phone != null">
                #{phone},
            </if>
            <if test="tel != null">
                #{tel},
            </if>
            <if test="code != null">
                #{code},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="header != null">
                #{header},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.sys.model.admin.Shop">
        UPDATE t_shop
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="tel != null">
                tel = #{tel},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="header != null">
                header = #{header},
            </if>
        </set>
        WHERE id = #{id}
    </update>
